func test_two_sum_brute_force(nums : []int, target : int) -> []int {
    // ❌ This will fail due to array indexing and return types
    for i := 0; i < len(nums); i = i + 1 {
        for j := i + 1; j < len(nums); j = j + 1 {
            if nums[i] + nums[j] == target {
                return [i, j];
            }
        }
    }
    return [-1, -1];
}

